if not varexist followCount
    @setvar! followCount 0
endif
if followers = 0
    overhead 'followcount = 0'
    @setvar! followCount 0
elseif followers = 1
    overhead 'followcount = 1'
    @setvar! followCount 1
elseif followers = 2
    overhead 'followcount = 2'
    @setvar! followCount 2
elseif followers = 3
    overhead 'followcount = 3'
    @setvar! followCount 3
elseif followers = 4
    overhead 'followcount = 4'
    @setvar! followCount 4
elseif followers = 5
    overhead 'followcount = 5'
    @setvar! followCount 5
endif
if followCount = 0
    overhead 'no pets'
elseif followCount = 1
    overhead '1 follow slot taken'
elseif followCount = 2 and findtype "an earth elemental" -1 -1 12 as EE
    overhead '2 follow slot taken' 33 EE
elseif followCount = 3 and findtype "an earth elemental" -1 -1 12 as EE
    overhead '3 follow slot taken' 33 EE
elseif followCount = 4 and findtype "an earth elemental" -1 -1 12 as EE
    overhead '4 follow slot taken' 33 EE
elseif followCount = 5 and findtype "an earth elemental" -1 -1 12 as EE
    overhead '5 follow slot taken' 33 EE
endif